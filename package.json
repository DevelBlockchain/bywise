{
  "name": "bywise",
  "version": "2.3.2",
  "description": "Bywise is an enterprise-grade permissioned Distributed Ledger Technology (DLT), Blockchain for developing solutions and applications. Its modular and versatile design suits a wide range of industry use cases. It offers a unique approach to consensus that enables performance at scale while preserving privacy.",
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "scripts": {
    "start": "NODE_OPTIONS=--max-old-space-size=512 nodemon --watch 'src/' --exec 'ts-node src/index.ts -log -chain ./local.json -start-debug -port 3001' -e ts",
    "start:1": "nodemon --watch 'src/' --exec 'ts-node src/index.ts -log -name node1 -reset -chain ./local.json -start-debug -port 3001' -e ts",
    "start:2": "nodemon --watch 'src/' --exec 'ts-node src/index.ts -log -name node2 -reset -chain ./local.json -new-wallet -start-debug -port 3005 -pnodes 3001' -e ts",
    "tsc": "tsc",
    "build": "tsc && pkg -c pkg.json ./dist/index.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest --watch true --maxWorkers=1 --config jestconfig.json",
    "test:all": "BYWISE_TEST=1 jest --verbose true --maxWorkers=5 --config jestconfig.json",
    "test:single": "npm run test:clear && npm test -- transactions.test.ts",
    "test:clear": "jest --clearCache"
  },
  "author": "Devel Blockchain <contact@develblockchain.com>",
  "license": "MIT",
  "dependencies": {
    "@bywise/web3": "^1.0.4",
    "bignumber.js": "^9.1.2",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "express-winston": "^4.2.0",
    "https": "^1.0.0",
    "jsonwebtoken": "^9.0.0",
    "level": "^8.0.0",
    "pidusage": "^3.0.2",
    "quickjs-emscripten": "^0.21.2",
    "randomstring": "^1.2.2",
    "seedrandom": "^3.0.5",
    "web3": "^4.8.0",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.0.3",
    "@tsconfig/node22": "^22.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.13.0",
    "@types/randomstring": "^1.1.8",
    "@types/supertest": "^6.0.2",
    "@yao-pkg/pkg": "^5.11.5",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.4.5"
  }
}
